#!/bin/sh
#
# Tux logo
#
#       __
#      째  째
#     |o_o |
#     |:_/ |
#    /    \ \
#   (|     | )
#  /'\_   _/`\
#  \___)=(___/
#
# Source: https://ascii.co.uk/art/linux
# Artist: Przemek Borys
#
# Some adaptations were made by me in order to better
# fit the terminal and look better in color.
#

# Colors
c1="${COLOR_FG_WHITE}";
c2="${COLOR_FG_DGREY}";
c3="${COLOR_FG_YELLOW}";

tux_logo=(
"${c2}       __      "
"${c2}      째  째     "
"${c2}     |${c1}o${c2}_${c1}o${c2} |    "
"${c2}     |${c3}:_/${c2} |    "
"${c2}    /${c1}/   \\\\${c2} \\   "
"${c2}   (${c1}|     |${c2} )  "
"${c3}  /'\\_${c1}   ${c3}_/\`\\  "
"${c3}  \\___)${c2}=${c3}(___/  "
)

# Cleanup
unset c1 c2 c3
