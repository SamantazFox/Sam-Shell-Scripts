#!/bin/sh
#
# Floppy logo
#
#   ____________
#  |^ |__|__[]| \
#  |HD_________  |
#  | | DATA 1  | |
#  | | ------  | |
#  | | Art by  | |
#  | | SamFox  | |
#  |_|_________|_|
#
# Artist: Samantaz Fox (me :D)
#
# Special thanks to KatieCookie, who gave a ton of
# feedback while I was making progress on this one!
#

# Colors
d="${COLOR_NONE}${COLOR_FG_DGREY}";
w="${COLOR_FG_WHITE}";
g="${COLOR_FG_GREY}";
L="${COLOR_FG_BLACK}${COLOR_BG_GREY}";

# Different disk number
n=$(( $RANDOM % 8 ))

# Different bottom colors
case $(( $RANDOM % 4 )) in
	0) x="${COLOR_BG_BLUE}";;
	1) x="${COLOR_BG_GREEN}";;
	2) x="${COLOR_BG_RED}";;
	*) x="${COLOR_BG_PURPLE}";;
esac


#logo_floppy=(
#"               "
#"${d}  ,---${w}------${d}-.  "
#"${d}  |${w}^${d}| ${w}|__[]|Â°${d}|  "
#"${d}  |  ______  |  "
#"${d}  | ${L} DATA   ${d} |  "
#"${d}  | ${L} ------ ${d} |  "
#"${d}  | ${L} ------ ${d} |  "
#"${d}  |_${x}        ${d}_|  "
#)

# Logo
logo_0="${d}   ______${w}____${d}__    "
logo_1="${d}  |${w}^${d} |__${w}|__[]|${d} \\   "
logo_2="${d}  |${g}HD${d}_________  |  "
logo_3="${d}  | |${L} DATA ${n}  ${d}| |  "
logo_4="${d}  | |${L} ------  ${d}| |  "
logo_5="${d}  | |${L} Art by  ${d}| |  "
logo_6="${d}  | |${L} SamFox  ${d}| |  "
logo_7="${d}  |_|${x}         ${d}|_|  "

# Cleanup
unset d w g L n x
